# ===========================================
# Tsumiki Sample Project - Environment Variables Template
# ===========================================
# Copy this file to .env and update the values

# 🌐 Application Settings
# 各 worktree ごとに一意の名前を設定すると
# `docker compose` のコンテナプレフィックスが衝突しません
COMPOSE_PROJECT_NAME=myapp_default
NODE_ENV=development
RAILS_ENV=development

# 🔑 Security
SECRET_KEY_BASE=your_secret_key_base_here
JWT_SECRET=your_jwt_secret_here

# 🗄️ Database Settings
MYSQL_ROOT_PASSWORD=root_password
MYSQL_DATABASE=myapp_development
MYSQL_USER=myapp
MYSQL_PASSWORD=myapp_pass
DATABASE_URL=mysql2://myapp:myapp_pass@db:3306/myapp_development

# 📦 Storage (MinIO)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin_password
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin_password
AWS_REGION=us-east-1
AWS_ENDPOINT=http://minio:9000

# 🌐 Domain Settings (本番環境)
FRONTEND_DOMAIN=your-app.com
API_DOMAIN=api.your-app.com
MINIO_DOMAIN=storage.your-app.com

# 🔧 External Services
REDIS_URL=redis://redis:6379/0

# 📧 Email Settings (将来実装予定)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# 🤖 AI Development (Optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# 📊 Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# 🚀 Deployment
DEPLOY_ENV=staging
BUILD_VERSION=latest